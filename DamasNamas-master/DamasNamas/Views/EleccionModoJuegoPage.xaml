<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DamasNamas.Views.EleccionModoJuegoPage"
             xmlns:vm="clr-namespace:DamasNamas.ViewModels"
             Title="EleccionModoJuegoPage">
    <ContentPage.BindingContext>
        <vm:EleccionModoJuegoVM/>
    </ContentPage.BindingContext>
    <VerticalStackLayout
        Spacing="50"
        VerticalOptions="Center"
        HorizontalOptions="Center"
        WidthRequest="100"
        >
        
        
        
        <Button 
            Command="{Binding ComandoLocal}"
            Text="Local"
            HeightRequest="100"/>
        <Button
            Text="Online"
            Command="{Binding ComandoOnline}"
            HeightRequest="100"/>
        
        
        
    </VerticalStackLayout>
</ContentPage>